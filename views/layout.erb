      </div>
    </div>
    <%= yield %>  <!-- load unique content from other .erb files -->
    <div class="row">
      <p>Current word: <%= @current %></p>
      <p>Guessed letters: <%= @guessed %></p>
      <p>Wrong letters: <%= @bad_letters %></p>
      <p>Wrong count: <%= @wrong %></p>
      <p>Mystery word: <%= @word %></p>
